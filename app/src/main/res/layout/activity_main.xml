<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="9"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewTxtExpression"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtExpression"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/textView_text_size_big"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:layout_gravity="end"
            tools:text="12536"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/txtAnswer"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/textView_text_size_small"
        android:singleLine="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="end"
        tools:text="= 12536"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@color/grey_Light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TableLayout
        android:weightSum="5"
        android:layout_weight="5.25"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAC"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_small"
                android:textColor="?attr/colorSecondary"
                android:text="AC"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnPrantezBaz"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text="("
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnPrantezBaste"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text=")"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnTaghsim"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text="/"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </TableRow>

        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn8"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="8"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn9"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="9"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnZarb"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text="*"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </TableRow>

        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn5"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn6"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="6"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnMines"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text="-"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </TableRow>

        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn2"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn3"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnPlus"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text="+"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </TableRow>

        <TableRow
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnClear"
                android:textDirection="rtl"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:textColor="?attr/colorSecondary"
                android:text=">"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn0"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnDot"
                android:background="?selectableItemBackground"
                android:textSize="@dimen/button_text_size_big"
                android:text="."
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/btnMosavi"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_circle"
                    android:textSize="@dimen/button_text_size_big"
                    android:textColor="?attr/colorOnSecondary"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="="
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>